module	MathFuncs;

//-------------------------------------------------------------------
//		Signature
//-------------------------------------------------------------------
double	sign(double x)
{
	if (x == 0)
		return 0;
	else
	{
		if (x > 0)
			return 1;
		else
			return -1;
	}
}

//-------------------------------------------------------------------
//		Absolute value
//-------------------------------------------------------------------
double	abs(double x)
{
	if (x >= 0)
		return x;
	else
		return -x;
}
